             x:Class="MEI.Pages.EventMap" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="White">
    <ContentView BackgroundColor="White" x:Name="emptyList" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="5">
        <StackLayout VerticalOptions="CenterAndExpand">
            <Image Source="mei_novenuemapicon_g.png" WidthRequest="100" HeightRequest="100"></Image>
            <Label x:Name="emptyText" Text="There is no venue map for this event!" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Small"  TextColor="#bfc9d3"/>
        </StackLayout>
    </ContentView>
</StackLayout>